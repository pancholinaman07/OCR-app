<div class="container mt-4">
    <div class="dropdown">
        <button class="btn btn-secondary dropdown-toggle" type="button" id="dateFilterButton" data-bs-toggle="dropdown"  aria-haspopup="true" aria-expanded="false">
            Filter
        </button>
        <div class="dropdown-menu" aria-labelledby="dateFilterButton">
            <form action="/record/history" method="get" class="px-4 py-3">
                <div class="form-group">
                    <label for="dob">Date of birth</label>
                    <input name="dob" type="date" class="form-control" id="dob" value=<%=locals.dob%>>
                </div>
                <div class="form-group">
                    <label for="doi">Date of issue</label>
                    <input name="doi" type="date" class="form-control" id="doi" value=<%=locals.doi%>>
                </div>
                <div class="form-group">
                    <label for="doe">Date of expiry</label>
                    <input name="doe" type="date" class="form-control" id="doe" value=<%=locals.doe%>>
                </div>
                <button type="submit" class="btn btn-primary">Apply Filter</button>
            </form>
        </div>
    </div>
</div>